@using Professional_Gift_Card_System.Models
@model MerchantResetPasswordModel

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



    <h2>Reset Password</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "Reset was unsuccessful. Please correct the errors and try again.")

                    @Html.HiddenFor(m => m.ID)

    <table>
    <tr>
    <td>
       <div class="editor-label">
                        @Html.LabelFor(model => model.Password)
       </div>
    </td>
    <td>
       <div class="editor-field">
                    @Html.TextBoxFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
       </div>   
    </td>
    </tr>

    <tr>
    <td>
       <div class="editor-label">
                        @Html.LabelFor(model => model.SecondPassword)
       </div>
    </td>
    <td>
       <div class="editor-field">
                    @Html.TextBoxFor(m => m.SecondPassword)
                    @Html.ValidationMessageFor(m => m.SecondPassword)
       </div>   
    </td>
    </tr>

    </table>



               <p>
                    <input type="submit" value="Reset Password" />
                </p>
     } 
    <div>
        @Html.ActionLink("Back to List", "SelectMerchantForEdit")
    </div>



