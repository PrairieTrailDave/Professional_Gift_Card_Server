@using Professional_Gift_Card_System.Models
@model IEnumerable<MerchantModel>

@{
    ViewBag.Title = "SelectMerchantForPayment";
    Layout = "~/Views/Shared/_MerchantLayout.cshtml";
}

<h2>Select Merchant For Payment</h2>

<table>
    <tr>
        <th></th>
        <th>
            MerchantID
        </th>
        <th>
            Paid To Date
        </th>
        <th>
            LastBillingDate
        </th>
        <th>
            MerchantName
        </th>
        <th>
            Address1
        </th>
        <th>
            Address2
        </th>
        <th>
            City
        </th>
        <th>
            State
        </th>
        <th>
            GiftActive
        </th>
        <th>
            LoyaltyActive
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Select", "SelectPaidToDate", new { id=item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MerchantID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaidToDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastBillingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MerchantName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiftActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoyaltyActive)
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Back To List", "Index", "Administration")
</p>
