@using Professional_Gift_Card_System.Models
@model MerchantPricingModel

@{
    ViewBag.Title = "Set Pricing";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Set Pricing</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.MerchantName)

        <div class="form-group">
            Set the pricing for @Model.MerchantName
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.PricingID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @(Html.DropDownListFor(model => model.PricingID,
                    new SelectList(ViewBag.Prices, "Value", "Text", Model.PricingID)))
                    @Html.ValidationMessageFor(model => model.PricingID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Set this price" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "SelectMerchantForEdit")
</div>


